<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item"
        android:layout_width="560dp"

        android:layout_height="660dp"
        android:layout_centerInParent="true"

        app:cardCornerRadius="4dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:padding="5dp"
                    android:src="@drawable/close"></ImageView>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="72dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/what_s_new"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rview_follow_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_title"
                android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>

            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:background="@drawable/follow_banner"
                android:gravity="center"
                android:orientation="horizontal">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/banner"
                android:layout_gravity="center"
                android:layout_marginHorizontal="54dp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView

                    android:id="@+id/webdav_and_"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="72dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/follow_us"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.03"
                    android:lineHeight="24sp"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/product_updates"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="186dp"
                        android:layout_height="36dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"

                        android:layout_marginHorizontal="6dp"
                        android:background="@drawable/oval_plane"
                        android:fontFamily="@font/roboto"

                        android:letterSpacing="0.09"
                        android:text="@string/maybe_later"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:visibility="gone"></Button>

                    <Button
                        android:id="@+id/btnFollow"
                        android:layout_width="186dp"
                        android:layout_height="36dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="6dp"
                        android:background="@drawable/oval_follow"
                        android:fontFamily="@font/roboto"

                        android:letterSpacing="0.09"
                        android:text="@string/follow_us"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"></Button>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>