<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/PopupStyle">

    <LinearLayout
        android:layout_width="@dimen/new_400dp"
        android:layout_height="@dimen/new_428dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/new_30dp"
        android:paddingEnd="@dimen/new_30dp">

        <LinearLayout
            android:id="@+id/choose_cover_paper_orientation_layout"
            android:layout_width="@dimen/new_272dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/new_30dp"
            android:background="@drawable/tab_layout_bg"
            android:gravity="center"
            android:padding="@dimen/new_2dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_style_tab"
                style="@style/TabSelectorItem"
                android:text="@string/text_style" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/favorites_tab"
                style="@style/TabSelectorItem"
                android:background="@android:color/transparent"
                android:text="@string/favorites" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_64dp"
            android:layout_marginTop="@dimen/new_16dp"
            app:cardBackgroundColor="@color/selected_item_bg"
            app:cardCornerRadius="@dimen/new_4dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/new_20dp"
                android:paddingEnd="@dimen/new_20dp">

                <TextView
                    android:id="@+id/preview_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/preview_text"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

                <ImageView
                    android:id="@+id/favorites_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/new_15dp"
                    android:paddingBottom="@dimen/new_15dp"
                    android:src="@drawable/iconfavorite" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/font_family_text_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_36dp"
            android:layout_marginTop="@dimen/new_20dp"
            android:background="@drawable/new_notebook_dialog_change_template_bg"
            android:drawableEnd="@drawable/chevron"
            android:drawablePadding="@dimen/new_12dp"
            android:gravity="center"
            android:paddingStart="@dimen/new_9dp"
            android:paddingTop="@dimen/new_9dp"
            android:paddingEnd="@dimen/new_16dp"
            android:paddingBottom="@dimen/new_9dp"
            android:text="Helvetica Neue"
            android:textColor="@color/ns_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_36dp"
            android:layout_marginTop="@dimen/new_12dp"
            android:background="@drawable/new_notebook_dialog_change_template_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_size_minus_button"
                android:layout_width="@dimen/new_45dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/ns_text"
                android:textSize="@dimen/new_15sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/button_gray_border" />

            <TextView
                android:id="@+id/font_size"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="28pt"
                android:textColor="@color/ns_text"
                android:textSize="@dimen/new_15sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/button_gray_border" />

            <TextView
                android:id="@+id/text_size_plus_button"
                android:layout_width="@dimen/new_45dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/ns_text"
                android:textSize="@dimen/new_15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_36dp"
            android:layout_marginTop="@dimen/new_12dp"
            android:background="@drawable/new_notebook_dialog_change_template_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bold_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="@dimen/new_9dp"
                android:paddingBottom="@dimen/new_9dp"
                android:scaleType="center"
                android:src="@drawable/bold" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/button_gray_border" />

            <ImageView
                android:id="@+id/italic_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="@dimen/new_9dp"
                android:paddingBottom="@dimen/new_9dp"
                android:scaleType="center"
                android:src="@drawable/italic" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/button_gray_border" />

            <ImageView
                android:id="@+id/underline_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="@dimen/new_9dp"
                android:paddingBottom="@dimen/new_9dp"
                android:scaleType="center"
                android:src="@drawable/underline" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/color_picker_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/new_12dp" />

        <TextView
            android:id="@+id/set_as_default_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:paddingTop="@dimen/new_12dp"
            android:paddingBottom="@dimen/new_19dp"
            android:text="@string/set_as_default"
            android:textColor="@color/ns_blue"
            android:textSize="@dimen/new_15sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>