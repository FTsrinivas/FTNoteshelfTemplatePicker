<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layUndo"
        android:layout_margin="@dimen/_10dp"
        android:gravity="center">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layUndo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_fifty_four"
        android:layout_above="@+id/layBottom"
        android:background="#2c2c2c"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_80dp"
            android:alpha="0.5"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="@dimen/_2sp"
            android:padding="@dimen/margin_five"
            android:text="@string/undo"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/btnRedo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_80dp"
            android:alpha="0.5"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="@dimen/_2sp"
            android:padding="@dimen/margin_five"
            android:text="@string/redo"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="@dimen/_2sp"
            android:padding="@dimen/margin_five"
            android:textAllCaps="true"
            android:text="@string/reset"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_80dp"
            android:alpha="0.5"
            android:enabled="false"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="@dimen/_2sp"
            android:padding="@dimen/margin_five"
            android:textAllCaps="true"
            android:text="@string/apply"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_fifty_four"
        android:layout_alignParentBottom="true"
        android:background="#444444"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_thirty"
        android:paddingRight="@dimen/margin_thirty">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="@dimen/_2sp"
            android:text="@string/cancel"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/checkCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_forty_five"
            android:button="@drawable/image_crop_select"
            android:checked="true"
            android:padding="@dimen/margin_five" />

        <CheckBox
            android:id="@+id/checkErase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_forty_five"
            android:button="@drawable/image_erase_select"
            android:checked="false"
            android:padding="@dimen/margin_five" />

        <CheckBox
            android:id="@+id/checkLasso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/image_lasso_select"
            android:checked="false"
            android:padding="@dimen/margin_five" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/imageEditDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="@dimen/_2sp"
            android:text="@string/done"
            android:textColor="#0298dc"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal" />
    </LinearLayout>
</RelativeLayout>