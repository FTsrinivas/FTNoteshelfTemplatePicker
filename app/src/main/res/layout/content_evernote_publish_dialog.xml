<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/new_24dp"
            android:src="@drawable/back_dark" />

        <TextView
            android:id="@+id/dialog_evrenote_publish_title"
            style="@style/DialogTitleStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/evernote_publish"
            android:textSize="@dimen/new_19sp" />

        <TextView
            android:id="@+id/dialog_done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:padding="@dimen/new_24dp"
            android:text="@string/done"
            android:textColor="@color/ns_blue"
            android:textSize="@dimen/new_17sp"
            android:textStyle="normal" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/dialog_evernote_publish_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/new_28dp"
            android:paddingEnd="@dimen/new_28dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/selected_item_bg"
                app:cardCornerRadius="@dimen/new_4dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/new_24dp"
                    android:paddingTop="@dimen/new_16dp"
                    android:paddingEnd="@dimen/new_24dp"
                    android:paddingBottom="@dimen/new_15dp">

                    <ImageView
                        android:layout_width="@dimen/new_48dp"
                        android:layout_height="@dimen/new_48dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/universal_evernote_big" />

                    <TextView
                        android:id="@+id/dialog_evernote_publish_last_sync_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/new_22dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/new_16sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/dialog_evernote_publish_notebooks"
                style="@style/PopupItemTextStyle"
                android:layout_marginTop="@dimen/new_24dp"
                android:text="@string/publish_notebooks" />

            <include layout="@layout/divider_black" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                style="@style/PopupItemTextStyle"
                android:text="@string/back_up_on_wifi_only"
                android:visibility="gone"
                app:thumbTint="@color/ns_blue" />

            <TextView
                android:id="@+id/dialog_evernote_log_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="@dimen/new_22dp"
                android:alpha="0.5"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@string/log"
                android:textColor="@android:color/black"
                android:textSize="@dimen/new_11sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dialog_evernote_error_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_back_up_error_recyclerview" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>