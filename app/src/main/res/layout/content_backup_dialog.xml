<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/new_24dp"
            android:src="@drawable/back_dark" />

        <TextView
            android:id="@+id/dialog_evernote_notebooks_title"
            style="@style/DialogTitleStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/auto_backup"
            android:textSize="@dimen/new_19sp" />

        <TextView
            android:id="@+id/dialog_done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:padding="@dimen/new_24dp"
            android:text="@string/done"
            android:textColor="@color/ns_blue"
            android:textSize="@dimen/new_17sp"
            android:textStyle="normal" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/dialog_backup_of_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/new_28dp"
            android:paddingEnd="@dimen/new_28dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/dialog_backup_change_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/selected_item_bg"
                app:cardCornerRadius="@dimen/new_4dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dialog_backup_image_view"
                        android:layout_width="@dimen/new_48dp"
                        android:layout_height="@dimen/new_48dp"
                        android:layout_margin="22dp"
                        android:layout_marginStart="@dimen/new_24dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/gdrive"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dialog_backup_backing_up_to_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeMaxTextSize="@dimen/new_16sp"
                            android:autoSizeMinTextSize="@dimen/new_14sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto"
                            android:gravity="start|center_vertical"
                            android:maxLines="1"
                            android:text="@string/backing_up_to_x"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/new_16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/dialog_backup_change_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/new_8dp"
                            android:background="@drawable/linked_cloud_login_text_bg"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/new_10dp"
                            android:paddingVertical="@dimen/new_4dp"
                            android:text="@string/change"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/new_11sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/backup_location_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/new_54dp"
                android:layout_marginTop="@dimen/new_16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select_backup_location_text_view"
                    style="@style/PopupItemTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/backup_location" />

                <TextView
                    android:id="@+id/backup_location_text_view"
                    style="@style/PopupItemValueTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/select_backup_location_text_view"
                    android:text="Root" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/chevron" />

            </RelativeLayout>

            <TextView
                android:id="@+id/dialog_backup_notebooks_to_backup_text_view"
                style="@style/PopupItemTextStyle"
                android:layout_marginTop="@dimen/new_24dp"
                android:text="@string/notebooks_to_backup"
                android:visibility="gone" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                style="@style/PopupItemTextStyle"
                android:text="@string/back_up_on_wifi_only"
                android:visibility="gone"
                app:thumbTint="@color/ns_blue" />

            <TextView
                android:id="@+id/tvLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="@dimen/new_22dp"
                android:alpha="0.5"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@string/log"
                android:textColor="@android:color/black"
                android:textSize="@dimen/new_11sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dialog_backup_error_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_back_up_error_recyclerview" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>