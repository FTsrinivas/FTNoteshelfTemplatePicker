<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/new_notebook_close_image_view"
                style="@style/DialogNavButton"
                android:src="@drawable/close_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:gravity="end"
                android:paddingStart="@dimen/new_24dp"
                android:paddingEnd="@dimen/new_24dp"
                android:text="@string/options"
                android:textColor="@color/ns_blue"
                android:textSize="@dimen/new_17sp"
                android:textStyle="normal"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            style="@style/DialogTitleStyle"
            android:layout_marginStart="@dimen/_28dp"
            android:layout_marginEnd="@dimen/_28dp"
            android:text="@string/new_notebook" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/new_notebook_dialog_templates_layout_margin"
            android:layout_marginTop="@dimen/new_31dp"
            android:layout_marginEnd="@dimen/new_notebook_dialog_templates_layout_margin"
            android:background="@color/selected_item_bg">

            <androidx.cardview.widget.CardView
                android:id="@+id/new_notebook_cover_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="@dimen/new_3dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_24dp"
                android:layout_marginBottom="@dimen/_5dp"
                app:layout_constraintBottom_toTopOf="@+id/new_notebook_cover_title_text_view"
                app:layout_constraintEnd_toStartOf="@id/separator">

                <ImageView
                    android:id="@+id/new_notebook_cover_image_view"
                    android:layout_width="@dimen/new_137dp"
                    android:layout_height="@dimen/new_170dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/new_notebook_cover_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/new_6dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:text="Basic Orange"
                android:textColor="@color/ns_text"
                android:textSize="@dimen/new_11sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toTopOf="@id/new_notebook_cover_choose_text_view"
                app:layout_constraintEnd_toEndOf="@id/new_notebook_cover_card_view"
                app:layout_constraintStart_toStartOf="@id/new_notebook_cover_card_view" />

            <TextView
                android:id="@+id/new_notebook_cover_choose_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_12dp"
                android:layout_marginBottom="@dimen/new_16dp"
                android:background="@drawable/new_notebook_dialog_change_template_bg"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:paddingStart="@dimen/new_14dp"
                android:paddingTop="@dimen/new_5dp"
                android:paddingEnd="@dimen/new_14dp"
                android:paddingBottom="@dimen/new_5dp"
                android:text="@string/change_template"
                android:textColor="@color/ns_blue"
                android:textSize="@dimen/new_11sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/new_notebook_cover_card_view"
                app:layout_constraintStart_toStartOf="@id/new_notebook_cover_card_view" />

            <Space
                android:id="@+id/separator"
                android:layout_width="@dimen/new_82dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/new_notebook_paper_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="@dimen/new_3dp"
                android:layout_marginBottom="@dimen/_5dp"
                app:cardElevation="5dp"

                app:layout_constraintBottom_toTopOf="@+id/new_notebook_paper_title_text_view"
                app:layout_constraintStart_toEndOf="@id/separator">

                <ImageView
                    android:id="@+id/new_notebook_paper_image_view"
                    android:layout_width="@dimen/new_137dp"
                    android:layout_height="@dimen/new_170dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/new_notebook_paper_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/new_6dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:text="Ruled"
                android:textColor="@color/ns_text"
                android:textSize="@dimen/new_11sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toTopOf="@+id/new_notebook_paper_choose_text_view"
                app:layout_constraintEnd_toEndOf="@id/new_notebook_paper_card_view"
                app:layout_constraintStart_toStartOf="@id/new_notebook_paper_card_view"
                app:layout_constraintTop_toTopOf="@id/new_notebook_cover_title_text_view" />

            <TextView
                android:id="@+id/new_notebook_paper_choose_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_12dp"
                android:layout_marginBottom="@dimen/new_16dp"
                android:background="@drawable/new_notebook_dialog_change_template_bg"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:paddingStart="@dimen/new_14dp"
                android:paddingTop="@dimen/new_5dp"
                android:paddingEnd="@dimen/new_14dp"
                android:paddingBottom="@dimen/new_5dp"
                android:text="@string/change_template"
                android:textColor="@color/ns_blue"
                android:textSize="@dimen/new_11sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/new_notebook_paper_card_view"
                app:layout_constraintStart_toStartOf="@id/new_notebook_paper_card_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/new_notebook_dialog_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/new_28dp"
            android:layout_marginTop="@dimen/new_20dp"
            android:layout_marginEnd="@dimen/new_28dp"
            android:background="@drawable/gray_border_white_fill"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:hint="@string/untitled"
            android:inputType="text"
            android:maxLines="1"
            android:padding="@dimen/new_12dp"
            android:textColor="@color/ns_text"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@drawable/cursor_color_blue"
            android:textSize="@dimen/new_16sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/new_note_book_create_text_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_46dp"
            android:layout_marginStart="@dimen/new_28dp"
            android:layout_marginTop="@dimen/new_20dp"
            android:layout_marginEnd="@dimen/new_28dp"
            android:layout_marginBottom="@dimen/new_22dp"
            android:background="@drawable/button_blue_bg_selector"
            android:backgroundTint="@color/ns_blue"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="@string/create_notebook"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/new_16sp"
            android:textStyle="normal" />

    </LinearLayout>

</ScrollView>