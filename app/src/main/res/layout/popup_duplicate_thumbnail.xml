<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PopupStyle">

    <LinearLayout
        android:id="@+id/duplicate_popup_layout"
        android:layout_width="@dimen/new_300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/new_24dp">

        <TextView
            android:id="@+id/insert_page_above_text_view"
            style="@style/PopupItemTextStyle"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/insert_page_above"
            android:textColor="@color/ns_blue" />

        <include layout="@layout/divider_black" />

        <TextView
            android:id="@+id/insert_page_below_text_view"
            style="@style/PopupItemTextStyle"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/insert_page_below"
            android:textColor="@color/ns_blue" />

        <include
            android:id="@+id/divider"
            layout="@layout/divider_black" />

        <TextView
            android:id="@+id/thumbnail_duplicate_popup_duplicate"
            style="@style/PopupItemTextStyle"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/duplicate_page_plural"
            android:textColor="@color/ns_blue" />

        <include layout="@layout/divider_black" />

        <TextView
            android:id="@+id/thumbnail_duplicate_popup_cancel"
            style="@style/PopupItemTextStyle"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/ns_blue" />

    </LinearLayout>

</androidx.cardview.widget.CardView>