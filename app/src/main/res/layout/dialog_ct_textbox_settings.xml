<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_textbox_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_ct_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/cover_back_dark" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15dp"
            android:gravity="center_horizontal"
            android:text="@string/advanced_options"
            app:fontFamily="@font/roboto"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image_ct_back"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_ct_font_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_54dp"
        android:background="#f7f7f2"
        app:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_25dp"
        android:text="@string/font_size"
        android:textColor="#383838"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/layout_back" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_font_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_54dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_25dp"
        android:paddingEnd="@dimen/_25dp"
        android:text="@string/_default"
        app:fontFamily="@font/roboto"
        android:textColor="#383838"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/text_ct_font_header" />

    <View
        android:id="@+id/top_level_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/_25dp"
        android:layout_marginEnd="@dimen/_25dp"
        android:background="#fcfcfa"
        app:layout_constraintTop_toBottomOf="@+id/text_font_default" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_ct_font_fit_to_selection"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_54dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_25dp"
        android:paddingEnd="@dimen/_25dp"
        android:text="@string/fit_to_selection"
        app:fontFamily="@font/roboto"
        android:textColor="#383838"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/top_level_view" />

    <View
        android:id="@+id/bottom_level_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/_25dp"
        android:layout_marginEnd="@dimen/_25dp"
        android:background="#fcfcfa"
        app:layout_constraintTop_toBottomOf="@+id/text_ct_font_fit_to_selection" />
</androidx.constraintlayout.widget.ConstraintLayout>