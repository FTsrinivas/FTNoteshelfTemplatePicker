<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <com.fluidtouch.noteshelf.document.views.FTViewPager
        android:id="@+id/surfacePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/document_audio_fragment_container"
        android:background="@color/page_bg"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/ftdocument_toolbar_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <FrameLayout
        android:id="@+id/ftdocument_fav_toolbar_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ftdocument_toolbar_fragment_layout"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/document_audio_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ftdocument_toolbar_fragment_layout" />
</RelativeLayout>