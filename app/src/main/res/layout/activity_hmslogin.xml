<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sp"
        android:src="@mipmap/nsclubpromo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_logins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_40sp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_email_login"
            android:layout_width="@dimen/_300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ns_red"
            android:onClick="onClick"
            android:text="Sign in with email"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            android:textColor="@color/white"
            android:theme="@style/FormButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_google_login"
            android:layout_width="@dimen/_300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:backgroundTint="@color/white"
            android:onClick="onClick"
            android:text="Sign in with Goole"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            android:theme="@style/FormButton"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_email_login" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_facebook_login"
            android:layout_width="@dimen/_300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:backgroundTint="#4aa1ff"
            android:onClick="onClick"
            android:text="Sign in with Facebook"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            android:textColor="@color/white"
            android:theme="@style/FormButton"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_google_login" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>