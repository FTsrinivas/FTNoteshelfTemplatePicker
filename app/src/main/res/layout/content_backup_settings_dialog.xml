<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/backup_settings_dialog_title"
        style="@style/DialogTitleStyle"
        android:layout_marginStart="@dimen/new_28dp"
        android:layout_marginEnd="@dimen/new_28dp"
        android:layout_marginBottom="@dimen/new_15dp"
        android:text="@string/dropbox" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/new_28dp"
            android:layout_marginEnd="@dimen/new_28dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_15dp"
                app:cardBackgroundColor="@color/selected_item_bg"
                app:cardCornerRadius="@dimen/new_4dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/new_24dp"
                    android:paddingTop="@dimen/new_16dp"
                    android:paddingEnd="@dimen/new_24dp"
                    android:paddingBottom="@dimen/new_10dp">

                    <ProgressBar
                        android:id="@+id/backup_settings_dialog_progress"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/new_2dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="40"
                        android:progressTint="@color/ns_blue"
                        android:src="@drawable/notebook_1" />

                    <TextView
                        android:id="@+id/backup_settings_dialog_data_used_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/new_7dp"
                        android:alpha="0.6"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="1.2 gb or 2gb used"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/new_14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/backup_settings_dialog_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="user@noteshelf.com"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/new_14sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/backup_settings_dialog_sign_out_button"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_20dp"
                android:background="@drawable/gray_border_white_fill"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:paddingTop="@dimen/new_12dp"
                android:paddingBottom="@dimen/new_12dp"
                android:text="@string/sign_out"
                android:textAllCaps="false"
                android:textColor="@color/ns_red"
                android:textSize="@dimen/new_16sp"
                android:textStyle="normal" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>