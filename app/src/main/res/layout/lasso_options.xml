<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_options_rounded_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_5dp"
        android:paddingRight="@dimen/_5dp">

        <TextView
            android:id="@+id/lasso_options_screenshot_text_view"
            style="@style/OptionsTextStyle"
            android:background="@android:color/transparent"
            android:text="@string/screenshot" />

        <View
            android:id="@+id/lasso_options_cut_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/lasso_options_cut_text_view"
            style="@style/OptionsTextStyle"
            android:background="@android:color/transparent"
            android:text="@string/cut" />

        <View
            android:id="@+id/lasso_options_copy_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/lasso_options_copy_text_view"
            style="@style/OptionsTextStyle"
            android:background="@android:color/transparent"
            android:text="@string/copy" />

        <View
            android:id="@+id/lasso_options_delete_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/lasso_options_delete_text_view"
            style="@style/OptionsTextStyle"
            android:background="@android:color/transparent"
            android:text="@string/delete" />

        <View
            android:id="@+id/lasso_options_resize_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lasso_options_resize_text_view"
            style="@style/OptionsTextStyle"
            android:background="@android:color/transparent"
            android:text="@string/resize"
            android:visibility="visible" />

        <View
            android:id="@+id/lasso_options_color_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lasso_options_color_text_view"
            style="@style/OptionsTextStyle"
            android:background="@android:color/transparent"
            android:text="@string/color"
            android:visibility="visible" />

        <View
            android:id="@+id/view_convert_to_text"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lasso_options_convert_to_text_view"
            style="@style/OptionsTextStyle"
            android:background="@android:color/transparent"
            android:text="@string/to_text"
            android:visibility="visible" />

        <View
            android:id="@+id/view_bring_to_front"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lasso_options_bring_to_front_text_view"
            style="@style/OptionsTextStyle"
            android:background="@android:color/transparent"
            android:text="@string/bring_to_front"
            android:visibility="visible" />

        <View
            android:id="@+id/view_send_to_back"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lasso_options_send_to_back_text_view"
            style="@style/OptionsTextStyle"
            android:background="@android:color/transparent"
            android:text="@string/send_to_back"
            android:visibility="visible" />
    </LinearLayout>
</HorizontalScrollView>