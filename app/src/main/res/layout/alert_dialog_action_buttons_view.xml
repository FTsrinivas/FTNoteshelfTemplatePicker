<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_fifty_four">

    <TextView
        android:id="@+id/alert_dialog_action_buttons_pos_text_view"
        style="@style/AlertDialogButtonStyle"
        android:text="@string/yes"
        android:textColor="@color/alert_pos_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alert_dialog_action_buttons_neg_text_view"
        style="@style/AlertDialogButtonStyle"
        android:alpha="0.6"
        android:text="@string/no"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/alert_dialog_action_buttons_pos_text_view"
        app:layout_constraintRight_toLeftOf="@id/alert_dialog_action_buttons_pos_text_view"
        app:layout_constraintTop_toTopOf="@id/alert_dialog_action_buttons_pos_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>