<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_colors_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/edit_colors_back_image_view"
            style="@style/DialogNavButton"
            android:src="@drawable/back_dark_chevron"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/edit_colors_title_text_view"
            style="@style/DialogTitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/edit_colors"
            android:textSize="@dimen/new_19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/edit_colors_reset_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/new_4dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="@dimen/new_12dp"
            android:text="@string/reset"
            android:textColor="@color/ns_blue"
            android:textSize="@dimen/new_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/edit_colors_delete_image_view"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/edit_colors_delete_image_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/new_25dp"
            android:padding="@dimen/new_12dp"
            android:src="@drawable/delete_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/new_33dp"
        android:paddingTop="0dp"
        android:paddingEnd="@dimen/new_33dp"
        android:paddingBottom="@dimen/new_33dp">

        <include layout="@layout/divider_black" />

        <TextView
            android:id="@+id/edit_colors_notes_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/new_16dp"
            android:layout_marginBottom="@dimen/new_16dp"
            android:alpha="0.5"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/tap_to_choose_color"
            android:textColor="@android:color/black"
            android:textSize="@dimen/new_14sp" />

        <include layout="@layout/divider_black" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/edit_colors_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="7"
            tools:listitem="@layout/item_colors_recycler_view" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_colors_delete_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/new_30dp"
        android:paddingTop="@dimen/new_8dp"
        android:paddingEnd="@dimen/new_30dp"
        android:paddingBottom="@dimen/new_30dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/edit_colors_delete_dialog_cancel_text_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/new_34dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@drawable/gray_border_white_fill"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@android:color/black"
            android:textSize="@dimen/new_14sp" />

        <TextView
            android:id="@+id/edit_colors_delete_dialog_reset_text_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/new_34dp"
            android:layout_marginStart="@dimen/new_16dp"
            android:layout_weight="1"
            android:background="@drawable/blue_fill_button_bg"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/done"
            android:textColor="@android:color/white"
            android:textSize="@dimen/new_14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_colors_reset_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/new_30dp"
        android:paddingTop="@dimen/new_8dp"
        android:paddingEnd="@dimen/new_30dp"
        android:paddingBottom="@dimen/new_30dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/edit_colors_reset_dialog_cancel_text_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/new_34dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@drawable/gray_border_white_fill"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@android:color/black"
            android:textSize="@dimen/new_14sp" />

        <TextView
            android:id="@+id/edit_colors_reset_dialog_reset_text_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/new_34dp"
            android:layout_marginStart="@dimen/new_16dp"
            android:layout_weight="1"
            android:background="@drawable/red_fill_button_bg"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/reset"
            android:textColor="@android:color/white"
            android:textSize="@dimen/new_14sp" />
    </LinearLayout>

</LinearLayout>