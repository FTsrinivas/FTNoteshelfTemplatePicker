<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/audio_options_record_text_view"
        android:layout_width="@dimen/new_82dp"
        android:layout_height="wrap_content"
        android:background="@drawable/portrait_bg"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/new_9dp"
        android:paddingBottom="@dimen/new_9dp"
        android:text="@string/record"
        android:textColor="@android:color/white"
        android:textSize="@dimen/new_14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#aaaab0" />

    <TextView
        android:id="@+id/audio_options_play_pause_text_view"
        android:layout_width="@dimen/new_82dp"
        android:layout_height="wrap_content"
        android:background="#cc262728"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/new_9dp"
        android:paddingBottom="@dimen/new_9dp"
        android:text="@string/play"
        android:textColor="@android:color/white"
        android:textSize="@dimen/new_14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#aaaab0" />

    <TextView
        android:id="@+id/audio_options_delete_text_view"
        android:layout_width="@dimen/new_82dp"
        android:layout_height="wrap_content"
        android:background="@drawable/landscape_bg"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/new_9dp"
        android:paddingBottom="@dimen/new_9dp"
        android:text="@string/delete"
        android:textColor="@android:color/white"
        android:textSize="@dimen/new_14sp" />

</LinearLayout>