<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/mainLinearLytID">

    <RelativeLayout
        android:id="@+id/tabsLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/new_103dp">

        <LinearLayout
            android:id="@+id/searchTemplatesLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_56dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/clear_search_btn"
                android:layout_width="@dimen/new_24dp"
                android:layout_height="@dimen/new_24dp"
                android:background="@mipmap/back_dark"
                android:layout_marginRight  ="@dimen/new_16dp"
                android:layout_marginLeft   ="@dimen/new_16dp"
                android:layout_marginTop    ="@dimen/new_16dp"
                android:layout_marginBottom ="@dimen/new_16dp"
                android:layout_alignParentLeft="true"
                android:layout_weight = "0"/>

            <EditText
                android:id="@+id/searchTextLyt"
                android:inputType="textNoSuggestions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/search_template"
                android:layout_toRightOf="@+id/clear_search_btn"
                android:layout_weight = "1">
            </EditText>

            <ImageButton
                android:id="@+id/clearSearchiCon"
                android:layout_width="@dimen/new_24dp"
                android:layout_height="@dimen/new_24dp"
                android:layout_marginLeft   = "669dp"
                android:layout_marginTop    ="@dimen/new_16dp"
                android:layout_marginBottom = "@dimen/new_16dp"
                android:layout_marginRight  = "@dimen/new_16dp"
                android:background="@mipmap/close_search_btn_icon"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>
        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:id="@+id/chooseTemplateOrientationLyt"
        android:visibility="visible">

        <ImageView
            android:id="@+id/dialog_close_button"
            android:layout_width="@dimen/new_24dp"
            android:layout_height="@dimen/new_24dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/new_16dp"
            android:layout_marginTop="@dimen/new_16dp"
            android:layout_marginBottom="@dimen/new_16dp"
            android:background="@mipmap/close_search_btn_icon" />

        <RelativeLayout
            android:id="@+id/paperSizeSelectionLyt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/new_48dp"
            android:layout_marginLeft="@dimen/new_32dp"
            android:layout_toRightOf="@+id/dialog_close_button"
            android:layout_marginTop="@dimen/new_6dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/template_orientation"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/new_24dp"
                android:text="@string/template_orientation"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/new_16sp"
                android:lineHeight="24sp"
                android:letterSpacing="0.01"
                android:textColor="#000000"
                android:lineSpacingExtra="5sp"
                android:translationY="-2.62sp"
                android:drawableEnd="@mipmap/arrow_drop_down"/>

            <TextView
                android:id="@+id/device_model_spinner_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_model_spinner_item"
                android:layout_below="@+id/template_orientation"
                android:fontFamily="@font/roboto"
                android:textStyle="normal"
                android:textSize="@dimen/new_14sp"
                android:lineHeight="20sp"
                android:letterSpacing="0.02"
                android:textColor="#000000"
                android:lineSpacingExtra="4sp"
                android:translationY="-1.8sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/coverTitleLyt"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/new_32dp"
            android:layout_toRightOf="@+id/dialog_close_button"
            android:layout_marginTop="@dimen/new_6dp"
            android:layout_marginBottom="@dimen/new_6dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/coverTitleID"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/new_24dp"
                android:text="@string/template_orientation"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/new_16sp"
                android:lineHeight="24sp"
                android:letterSpacing="0.01"
                android:textColor="#000000"
                android:lineSpacingExtra="5sp"
                android:translationY="-2.62sp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/templatesToolbarLytID"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/new_24dp"
            android:layout_marginTop    ="@dimen/new_16dp"
            android:layout_marginRight  = "@dimen/new_16dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|end">

            <ImageButton
                android:id="@+id/club_downlaods_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/club_page_icon"/>

            <ImageButton
                android:id="@+id/searchiCon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/new_24dp"
                android:layout_toRightOf="@+id/club_downlaods_btn"
                android:background="@mipmap/template_search_icon" />
            />
        </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/orientation_tab_layout2"
            android:layout_width="@dimen/new_186dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/template_picker_tab_layout_bg"
            android:layout_alignParentLeft="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/portrait_tab1"
                style="@style/TabSelectorItemNew"
                android:layout_width="93dp"
                android:layout_height="@dimen/new_28dp"
                android:text="@string/portrait"
                android:textSize="@dimen/new_12sp"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2sp"
                android:translationY="-0.97sp"
                android:layout_marginTop="@dimen/new_2dp"
                android:layout_marginLeft="@dimen/new_2dp"
                android:layout_marginBottom="@dimen/new_2dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/landscape_tab1"
                style="@style/TabSelectorItemNew"
                android:layout_width="93dp"
                android:layout_height="@dimen/new_28dp"
                android:background="@android:color/transparent"
                android:text="@string/landscape"
                android:textSize="@dimen/new_12sp"
                android:layout_marginTop="@dimen/new_2dp"
                android:layout_marginLeft="@dimen/new_2dp"
                android:layout_marginBottom="@dimen/new_2dp"
                android:layout_toRightOf="@+id/portrait_tab1"/>

        </RelativeLayout>

        <include
            android:id="@+id/orientation_tab_layout1"
            layout="@layout/templates_orientation_lyt"
            android:layout_marginLeft="@dimen/new_72dp"
            android:layout_marginTop="@dimen/new_7dp"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/new_186dp"
            android:layout_height="@dimen/new_32dp"
            android:layout_marginBottom="@dimen/new_12dp">

        </include>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#14212121" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/new_48dp"
        android:id="@+id/categoriesLyt">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/new_56dp">
        </androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#14212121"
    />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_marginLeft="@dimen/new_16dp"
        android:layout_marginRight="@dimen/new_16dp"
        android:layout_marginTop="@dimen/new_16dp"
        android:fillViewport="true"
        />
</LinearLayout>

