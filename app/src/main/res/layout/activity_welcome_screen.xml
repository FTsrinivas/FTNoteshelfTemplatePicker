<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/ns_blue"
    android:orientation="vertical"
    tools:context="com.fluidtouch.noteshelf.welcome.FTWelcomeScreenActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/welcome_screen_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/welcome_screen_skip_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:gravity="start"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="@dimen/_16sp"
            android:paddingStart="@dimen/_34dp"
            android:paddingTop="@dimen/_26dp"
            android:paddingEnd="@dimen/_34dp"
            android:paddingBottom="@dimen/_26dp"
            android:stateListAnimator="@null"
            android:text="@string/skip"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_16sp" />

        <Button
            android:id="@+id/welcome_screen_next_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:gravity="end"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="@dimen/_16sp"
            android:paddingStart="@dimen/_34dp"
            android:paddingTop="@dimen/_26dp"
            android:paddingEnd="@dimen/_34dp"
            android:paddingBottom="@dimen/_26dp"
            android:stateListAnimator="@null"
            android:text="@string/next"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>
</LinearLayout>