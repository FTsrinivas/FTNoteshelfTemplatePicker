<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/new_300dp"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/moveto_page_back_image_view"
                style="@style/DialogNavButton"
                android:layout_alignParentStart="true"
                android:src="@drawable/back_dark_chevron" />

            <TextView
                android:id="@+id/page_move_title_back"
                style="@style/DialogTitleStyle"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:text="@string/move_to"
                android:textSize="@dimen/new_19sp" />

        </RelativeLayout>

        <include layout="@layout/divider_black" />

        <EditText
            android:id="@+id/page_move_new_notebook_edit_text"
            style="@style/PopupItemTextStyle"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/category_new_folder_dark"
            android:drawablePadding="@dimen/new_20dp"
            android:hint="@string/new_notebook"
            android:paddingHorizontal="@dimen/new_24dp"
            android:textSize="@dimen/new_16sp" />

        <include
            android:id="@+id/page_move_new_notebook_divider"
            layout="@layout/divider_black"
            android:paddingHorizontal="@dimen/new_24dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/page_move_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/new_1dp"
            android:outlineProvider="bounds"
            android:paddingHorizontal="@dimen/new_24dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_category_recycler_view" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/page_move_panel_one_child_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clickable="false"
        android:fitsSystemWindows="true"
        android:gravity="start"
        tools:layout="@layout/fragment_moveto_shelf" />

</RelativeLayout>