<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_24dp">

        <TextView
            android:id="@+id/tvDialogTitle"
            style="@style/DialogTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/new_25dp"
            android:drawableStart="@drawable/back_dark_chevron"
            android:drawablePadding="@dimen/new_24dp"
            android:text="@string/quick_create_settings"
            android:textSize="@dimen/new_19sp" />

        <LinearLayout
            android:id="@+id/random_cover_design_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/PopupItemTextStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/random_cover_design" />

            <Switch
                android:id="@+id/switch_RandomCoverDesign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:theme="@style/Switch" />

        </LinearLayout>

        <include layout="@layout/divider_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/new_13dp"
            android:paddingBottom="@dimen/new_14dp"
            android:visibility="gone">

            <TextView
                style="@style/PopupItemTextStyle"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="@string/default_cover" />

            <TextView
                android:id="@+id/tvDefaultCover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:fontFamily="@font/roboto_medium"
                android:text="Basic Orange"
                android:textColor="@android:color/black"
                android:textSize="@dimen/new_14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/default_paper_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/new_13dp"
            android:paddingBottom="@dimen/new_14dp">

            <TextView
                style="@style/PopupItemTextStyle"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="@string/default_paper" />

            <TextView
                android:id="@+id/tvDefaultPaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:fontFamily="@font/roboto_medium"
                android:text="Basic Ruled"
                android:textColor="@android:color/black"
                android:textSize="@dimen/new_14sp" />

        </LinearLayout>

        <include layout="@layout/divider_black" />

    </LinearLayout>

</ScrollView>