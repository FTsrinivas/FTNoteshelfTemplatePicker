<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_back_button"
            style="@style/DialogNavButton"
            android:src="@drawable/back_dark_chevron" />

        <TextView
            style="@style/DialogTitleStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/bookmark_page"
            android:textSize="@dimen/new_19sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/bookmark_switch"
            style="@style/PopupItemTextStyle"
            android:layout_width="wrap_content"
            android:padding="@dimen/new_24dp"
            android:theme="@style/Switch" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bookmark_page_preview_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/new_20dp"
        android:layout_marginEnd="@dimen/new_20dp"
        android:background="@drawable/gray_border_white_fill"
        android:gravity="center"
        android:padding="1dp"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/bookmark_thumbnail_image_view"
            android:layout_width="@dimen/new_120dp"
            android:layout_height="@dimen/new_150dp"
            app:cardBackgroundColor="@color/selected_item_bg"
            app:cardCornerRadius="@dimen/new_4dp"
            app:cardElevation="0dp" />

        <ImageView
            android:id="@+id/bookmark_icon"
            android:layout_width="@dimen/new_24dp"
            android:layout_height="@dimen/new_24dp"
            android:layout_alignEnd="@id/bookmark_thumbnail_image_view"
            android:layout_alignParentTop="@id/bookmark_thumbnail_image_view"
            android:layout_marginTop="@dimen/margin_miuns_three"
            android:layout_marginEnd="@dimen/_4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bookmark_blue" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bookmark_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/new_20dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/new_20dp"
        android:paddingEnd="@dimen/new_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bookmark_blue_color"
                android:layout_width="@dimen/new_44dp"
                android:layout_height="@dimen/new_44dp"
                android:layout_margin="@dimen/new_8dp"
                android:background="@drawable/bookmark_circle_blue"
                android:padding="@dimen/new_7dp"
                android:tag="bookmark_blue" />

            <ImageView
                android:id="@+id/bookmark_purple_color"
                android:layout_width="@dimen/new_44dp"
                android:layout_height="@dimen/new_44dp"
                android:layout_margin="@dimen/new_8dp"
                android:background="@drawable/bookmark_circle_purple"
                android:padding="@dimen/new_7dp"
                android:tag="bookmark_purple" />

            <ImageView
                android:id="@+id/bookmark_red_color"
                android:layout_width="@dimen/new_44dp"
                android:layout_height="@dimen/new_44dp"
                android:layout_margin="@dimen/new_8dp"
                android:background="@drawable/bookmark_circle_red"
                android:padding="@dimen/new_7dp"
                android:tag="bookmark_red" />

            <ImageView
                android:id="@+id/bookmark_orange_color"
                android:layout_width="@dimen/new_44dp"
                android:layout_height="@dimen/new_44dp"
                android:layout_margin="@dimen/new_8dp"
                android:background="@drawable/bookmark_circle_orange"
                android:padding="@dimen/new_7dp"
                android:tag="bookmark_orange" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/new_20dp"
            android:paddingEnd="@dimen/new_20dp">

            <ImageView
                android:id="@+id/bookmark_yellow_color"
                android:layout_width="@dimen/new_44dp"
                android:layout_height="@dimen/new_44dp"
                android:layout_margin="@dimen/new_8dp"
                android:background="@drawable/bookmark_circle_yellow"
                android:padding="@dimen/new_7dp"
                android:tag="bookmark_yellow" />

            <ImageView
                android:id="@+id/bookmark_green_color"
                android:layout_width="@dimen/new_44dp"
                android:layout_height="@dimen/new_44dp"
                android:layout_margin="@dimen/new_8dp"
                android:background="@drawable/bookmark_circle_green"
                android:padding="@dimen/new_7dp"
                android:tag="bookmark_green" />

            <ImageView
                android:id="@+id/bookmark_dark_grey_color"
                android:layout_width="@dimen/new_44dp"
                android:layout_height="@dimen/new_44dp"
                android:layout_margin="@dimen/new_8dp"
                android:background="@drawable/bookmark_circle_dark_grey"
                android:padding="@dimen/new_7dp"
                android:tag="bookmark_gray" />

            <ImageView
                android:id="@+id/bookmark_light_grey_color"
                android:layout_width="@dimen/new_44dp"
                android:layout_height="@dimen/new_44dp"
                android:layout_margin="@dimen/new_8dp"
                android:background="@drawable/bookmark_circle_light_gray"
                android:padding="@dimen/new_7dp"
                android:tag="bookmark_off" />

        </LinearLayout>

        <EditText
            android:id="@+id/bookmark_title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_46dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/new_20dp"
            android:layout_marginTop="@dimen/new_12dp"
            android:layout_marginEnd="@dimen/new_20dp"
            android:layout_marginBottom="@dimen/new_20dp"
            android:background="@drawable/finder_search_bg"
            android:fontFamily="@font/roboto_medium"
            android:hint="@string/bookmark_name"
            android:maxLines="1"
            android:paddingStart="@dimen/new_20dp"
            android:paddingEnd="@dimen/new_20dp"
            android:textColor="@color/ns_text"
            android:textSize="@dimen/new_16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/bookmark_info_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/new_12dp"
        android:layout_marginBottom="@dimen/new_20dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/bookmark_info"
        android:textColor="@android:color/black"
        android:textSize="@dimen/new_12sp"
        android:visibility="gone" />

</LinearLayout>