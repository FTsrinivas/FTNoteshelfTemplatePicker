<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PopupStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/shelf_notebook_options_layout"
            android:layout_width="@dimen/new_320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/hide_for_trash_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/popup_shelf_notebook_open_text_view"
                    style="@style/PopupItemTextStyle"
                    android:paddingHorizontal="@dimen/new_24dp"
                    android:text="@string/open" />

                <include layout="@layout/divider_black" />

                <TextView
                    style="@style/PopupItemTextStyle"
                    android:paddingHorizontal="@dimen/new_24dp"
                    android:text="@string/open_in_new_window"
                    android:visibility="gone" />

                <include
                    layout="@layout/divider_black"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/popup_shelf_notebook_pin_text_view"
                        style="@style/PopupItemTextStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/new_24dp"
                        android:text="@string/pin_notebook" />

                    <ImageView
                        android:id="@+id/popup_shelf_notebook_pin_selected_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/new_24dp"
                        android:src="@drawable/category_folder_dark" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10dp"
                    android:alpha="0.1"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/popup_shelf_notebook_change_cover_text_view"
                    style="@style/PopupItemTextStyle"
                    android:paddingHorizontal="@dimen/new_24dp"
                    android:text="@string/change_cover" />

                <include layout="@layout/divider_black" />
            </LinearLayout>

            <TextView
                android:id="@+id/popup_shelf_notebook_rename_text_view"
                style="@style/PopupItemTextStyle"
                android:paddingHorizontal="@dimen/new_24dp"
                android:text="@string/rename" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10dp"
                android:alpha="0.1"
                android:background="@android:color/black" />

            <LinearLayout
                android:id="@+id/hide_for_trash_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/popup_shelf_notebook_duplicate_text_view"
                    style="@style/PopupItemTextStyle"
                    android:paddingHorizontal="@dimen/new_24dp"
                    android:text="@string/duplicate" />

                <include layout="@layout/divider_black" />
            </LinearLayout>

            <TextView
                android:id="@+id/popup_shelf_notebook_move_text_view"
                style="@style/PopupItemTextStyle"
                android:paddingHorizontal="@dimen/new_24dp"
                android:text="@string/move" />

            <include layout="@layout/divider_black" />

            <TextView
                android:id="@+id/popup_shelf_notebook_share_text_view"
                style="@style/PopupItemTextStyle"
                android:paddingHorizontal="@dimen/new_24dp"
                android:text="@string/share" />

            <LinearLayout
                android:id="@+id/hide_for_trash_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/divider_black" />

                <TextView
                    android:id="@+id/popup_shelf_notebook_move_to_trash_text_view"
                    style="@style/PopupItemTextStyle"
                    android:paddingHorizontal="@dimen/new_24dp"
                    android:text="@string/trash_title"
                    android:textColor="@color/ns_red" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>