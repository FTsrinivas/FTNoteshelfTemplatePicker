<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/clipart_thumbnail_image_view"
        android:layout_width="@dimen/new_91dp"
        android:layout_height="@dimen/new_88dp"
        android:contentDescription="@string/clipart"
        android:padding="@dimen/new_6dp"
        android:scaleType="fitXY"
        android:src="@drawable/loadingclipart" />

    <ImageButton
        android:id="@+id/clipart_remove_button"
        android:layout_width="@dimen/new_22dp"
        android:layout_height="@dimen/new_22dp"
        android:layout_alignTop="@id/clipart_thumbnail_image_view"
        android:layout_alignEnd="@id/clipart_thumbnail_image_view"
        android:background="@android:color/transparent"
        android:contentDescription="@string/clipart"
        android:src="@drawable/delete_circle" />

</RelativeLayout>