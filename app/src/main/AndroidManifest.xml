<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fluidtouch.noteshelf2">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.faketouch"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.back"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
        android:name="com.fluidtouch.noteshelf.FTApp"
        android:allowBackup="false"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:extractNativeLibs="true"
        android:hardwareAccelerated="true"
        android:icon="${appIcon}"
        android:label="${appName}"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:resizeableActivity="true"
        android:roundIcon="${appIconRound}"
        android:supportsRtl="false"
        android:theme="@style/ShelfTheme"
        android:usesCleartextTraffic="true"
        tools:replace="label,android:icon,android:roundIcon,android:theme,android:supportsRtl,android:allowBackup">
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
        <activity
            android:name="com.fluidtouch.noteshelf.commons.ui.FTSplashScreenActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.MULTIWINDOW_LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/pdf" />
                <data android:mimeType="image/jpeg" />
                <data android:mimeType="image/gif" />
                <data android:mimeType="image/png" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="application/nsa" />
                <data android:mimeType="*/nsa" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="*"
                    android:pathPattern=".*\\.pdf"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.PDF"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.jpg"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.JPG"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.png"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.PNG"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.jpeg"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.JPEG"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:mimeType="application/*"
                    android:pathPattern=".*\\.nsa"
                    android:scheme="file" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:pathPattern=".*\\.pdf"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.pdf"
                    android:scheme="https" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.PDF"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.PDF"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:pathPattern=".*\\.nsa"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.nsa"
                    android:scheme="https" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.nsa"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:mimeType="application/*"
                    android:pathPattern=".*\\.nsa" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="noteshelf.net"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="noteshelf.net"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:pathPattern=".*\\.jpeg"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.jpeg"
                    android:scheme="https" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.JPEG"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.JPEG"
                    android:scheme="https" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.jpg"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.jpg"
                    android:scheme="https" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.JPG"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.JPG"
                    android:scheme="https" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.png"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.png"
                    android:scheme="https" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.PNG"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.PNG"
                    android:scheme="https" />
                <data
                    android:host="*"
                    android:mimeType="application/*"
                    android:pathPattern=".*\\.nsa" />
            </intent-filter>
            <intent-filter android:label="NoteShelf">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/jpeg" />
                <data android:mimeType="image/png" />
            </intent-filter>
            <intent-filter android:label="NoteShelf">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/txt" />
            </intent-filter>
            <intent-filter android:label="NoteShelf">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="*"
                    android:mimeType="application/octet-stream"
                    android:pathPattern=".*\\.nsa" />
            </intent-filter>
            <intent-filter android:label="NoteShelf">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="*"
                    android:mimeType="application/pdf"
                    android:pathPattern=".*\\.pdf" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="WindowManagerPreference:FreeformWindowSize"
            android:value="[phone|tablet|maximize]" />
        <meta-data
            android:name="WindowManagerPreference:FreeformWindowOrientation"
            android:value="[portrait|landscape]" />
        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity
            android:name="com.fluidtouch.noteshelf.globalsearch.FTGlobalSearchActivity"
            android:configChanges="screenSize|smallestScreenSize|orientation|screenLayout|colorMode"
            android:windowSoftInputMode="stateHidden" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity
            android:name="com.fluidtouch.noteshelf.welcome.FTWelcomeScreenActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.fluidtouch.noteshelf.shelf.activities.FTBaseShelfActivity"
            android:configChanges="screenSize|smallestScreenSize|orientation|screenLayout|keyboard"
            android:launchMode="singleTop">

        </activity>

        <activity android:name="com.fluidtouch.noteshelf.commons.ui.FTSmallScreensErrorActivity" />
        <activity
            android:name="com.fluidtouch.noteshelf.document.FTDocumentActivity"
            android:configChanges="screenSize|smallestScreenSize|orientation|screenLayout|colorMode|locale"
            android:windowSoftInputMode="adjustUnspecified|stateUnchanged|stateHidden|stateAlwaysHidden|adjustPan">
            <intent-filter>
                <action android:name="com.samsung.android.support.REMOTE_ACTION" />
            </intent-filter>
            <meta-data
                android:name="com.samsung.android.support.REMOTE_ACTION"
                android:resource="@xml/remote_action" />
        </activity>
        <activity
            android:name="com.fluidtouch.noteshelf.store.ui.FTStoreActivity"
            android:configChanges="screenSize|smallestScreenSize|orientation|screenLayout|colorMode"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.fluidtouch.noteshelf.document.imageedit.FTImageAdvanceEditingAcitivity"
            android:configChanges="screenSize|smallestScreenSize|orientation|screenLayout|colorMode"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.noteshelf.auth.ui.HMSLoginActivity"
            android:configChanges="screenSize|smallestScreenSize|orientation|screenLayout|colorMode"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.noteshelf.auth.ui.HMSUSerLoginActivity"
            android:configChanges="screenSize|smallestScreenSize|orientation|screenLayout|colorMode"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.noteshelf.auth.ui.HMSRegisterActivity"
            android:configChanges="screenSize|smallestScreenSize|orientation|screenLayout|colorMode"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.dropbox.core.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask">
            <intent-filter>

                <!-- Change this to be db- followed by your app key -->
                <data android:scheme="db-${dropBoxAppKey}" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_application_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name="com.google.android.gms.auth.api.signin.internal.SignInHubActivity" />
        <activity android:name="com.evernote.client.android.EvernoteOAuthActivity" />
        <activity android:name="com.evernote.client.android.login.EvernoteLoginActivity" />
        <activity
            android:name="com.fluidtouch.noteshelf.scandocument.ScanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="zendesk.support.request.RequestActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="zendesk.support.guide.HelpCenterActivity"
            android:theme="@style/AppTheme" />
        <activity android:name="com.fluidtouch.noteshelf.commons.ui.FTSaveToDeviceActivity" />

        <meta-data
            android:name="EasyGoClient"
            android:value="true" />
        <!-- This activity is used to get authentication callback for OneDrive -->
        <activity android:name="com.microsoft.identity.client.BrowserTabActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="com.fluidtouch.noteshelf2"
                    android:path="/${oneDriveSigningHash}"
                    android:scheme="msauth" />
            </intent-filter>
        </activity>
    </application>

</manifest>