<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_global_search_content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/_14dp">

    <RelativeLayout
        android:id="@+id/item_global_search_content_background_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/searched_page_bg">

        <com.fluidtouch.noteshelf.globalsearch.FTGlobalSearchImageView
            android:id="@+id/global_search_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/searched_page_bg"
            android:maxWidth="180dp"
            android:maxHeight="200dp"
            android:minWidth="90dp"
            android:minHeight="110dp" />

        <com.fluidtouch.noteshelf.document.search.FTTextHighlightView
            android:id="@+id/global_search_text_highlight_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/global_search_image_view"
            android:layout_alignTop="@id/global_search_image_view"
            android:layout_alignEnd="@id/global_search_image_view"
            android:layout_alignBottom="@id/global_search_image_view"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="0dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/global_search_notebook_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/notebook_title"
        android:textColor="#383838"
        android:textSize="@dimen/text_size_13"
        android:textStyle="bold" />

</LinearLayout>