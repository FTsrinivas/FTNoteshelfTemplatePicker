<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="415dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/fav_widget_rounded_bg">

    <RelativeLayout
        android:id="@+id/favWidgetToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/sizeIconLayout"
            android:layout_width="@dimen/new_24dp"
            android:layout_height="@dimen/new_24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_16dp"
            android:layout_marginRight="@dimen/_8dp"
            android:background="@mipmap/back_big">

            <ImageView
                android:id="@+id/sizeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <View
            android:id="@+id/vertLine1"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sizeIconLayout"
            android:alpha="0.1"
            android:background="@color/black" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favoritesRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_toLeftOf="@+id/closeSizeLyt"
            android:layout_toRightOf="@+id/vertLine1"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_fav_widget_recycler_view" />

        <LinearLayout
            android:id="@+id/laySizes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_toLeftOf="@+id/closeSizeLyt"
            android:layout_toRightOf="@+id/vertLine1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/leftFadeLytId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/vertLine1"
            android:background="@mipmap/faderight"
            android:rotation="180" />

        <ImageView
            android:id="@+id/rightFadeLytId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/closeSizeLyt"
            android:background="@mipmap/faderight" />

        <ImageView
            android:id="@+id/closeSizeLyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_16dp"
            android:paddingLeft="@dimen/_8dp"
            android:src="@mipmap/close_big" />
    </RelativeLayout>

</RelativeLayout>