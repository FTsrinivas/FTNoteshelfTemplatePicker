<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/new_24dp">

        <TextView
            style="@style/DialogTitleStyle"
            android:text="@string/where_is_your_backup"
            android:gravity="center"
            android:textSize="@dimen/new_17sp" />

        <TextView
            android:id="@+id/tvGoogleDrive"
            style="@style/PopupItemTextStyle"
            android:layout_marginTop="@dimen/new_20dp"
            android:drawableStart="@drawable/universal_gdrive"
            android:drawablePadding="@dimen/new_12dp"
            android:text="@string/google_drive" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:alpha="0.2"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvDropbox"
            style="@style/PopupItemTextStyle"
            android:drawableStart="@drawable/universal_dropbox"
            android:drawablePadding="@dimen/new_12dp"
            android:text="@string/dropbox" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:alpha="0.2"
            android:background="@android:color/darker_gray" />

    </LinearLayout>

</ScrollView>