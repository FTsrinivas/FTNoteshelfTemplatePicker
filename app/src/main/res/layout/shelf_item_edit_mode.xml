<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shelf_item_edit_mode_layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#344455"
    android:orientation="horizontal"
    android:paddingStart="@dimen/margin_eight"
    android:paddingEnd="@dimen/_6dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/shelf_item_edit_mode_done_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableStart="@drawable/close_white"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shelf_item_edit_mode_title_text_view"
        style="@style/ToolbarTitleStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_16dp"
        android:text="@string/num_selected" />

    <TextView
        android:id="@+id/shelf_item_edit_mode_select_all_text_View"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:text="@string/select_all"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>