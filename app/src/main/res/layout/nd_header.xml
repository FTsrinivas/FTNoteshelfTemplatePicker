<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nd_header_layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="center_horizontal"
    android:background="#344455"
    android:orientation="horizontal"
    tools:showIn="@layout/categories_layout">

    <ImageView
        android:id="@+id/nd_header_settings_image_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp"
        android:src="@drawable/settings_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nd_header_plus_image_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp"
        android:src="@drawable/category_add_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>