<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/store_pack_width"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_thirty"
    android:paddingTop="@dimen/_20dp">

    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="@dimen/store_pack_small_image_length"
        android:layout_height="@dimen/store_pack_small_image_length"
        android:scaleType="fitXY"
        android:src="@mipmap/app_icon_launcher_round" />

    <LinearLayout
        android:id="@+id/layHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/default_cover"
            android:textColor="#383838"
            android:textSize="@dimen/store_pack_small_text_title_size"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:fontFamily="sans-serif"
            android:text="Basic Orange"
            android:textColor="#383838"
            android:textSize="@dimen/store_pack_small_text_sub_title_size"
            android:textStyle="normal" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/_6dp">

        <TextView
            android:id="@+id/txtGet"
            android:layout_width="90dp"
            android:layout_height="@dimen/margin_twenty_eight"
            android:background="@drawable/store_get_bg"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/get"
            android:textColor="#ffffff"
            android:textSize="@dimen/store_pack_small_text_sub_title_size"
            android:textStyle="normal" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/_34dp"
            android:layout_height="@dimen/_34dp"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/progress_circular"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>