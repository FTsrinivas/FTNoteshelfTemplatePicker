<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/new_64dp"
        android:background="@color/ns_dialog_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/frag_shelf_bottom_options_share_text_view"
            style="@style/ShelfBottomOptionsTextStyle"
            android:drawableTop="@drawable/share_dark"
            android:text="@string/share" />

        <TextView
            android:id="@+id/frag_shelf_bottom_options_duplicate_text_view"
            style="@style/ShelfBottomOptionsTextStyle"
            android:drawableTop="@drawable/duplicate_dark"
            android:text="@string/duplicate" />

        <TextView
            android:id="@+id/frag_shelf_bottom_options_move_text_view"
            style="@style/ShelfBottomOptionsTextStyle"
            android:drawableTop="@drawable/move_dark"
            android:text="@string/move" />

        <TextView
            android:id="@+id/frag_shelf_bottom_options_delete_text_view"
            style="@style/ShelfBottomOptionsTextStyle"
            android:drawableTop="@drawable/delete_dark"
            android:text="@string/trash_title" />

        <TextView
            android:id="@+id/frag_shelf_bottom_options_share_cover_text_view"
            style="@style/ShelfBottomOptionsTextStyle"
            android:drawableTop="@drawable/coverstyle_dark"
            android:text="@string/cover" />

        <TextView
            android:id="@+id/frag_shelf_bottom_options_rename_text_view"
            style="@style/ShelfBottomOptionsTextStyle"
            android:drawableTop="@drawable/textstyle_dark"
            android:text="@string/rename" />

        <TextView
            android:id="@+id/frag_shelf_bottom_options_group_text_view"
            style="@style/ShelfBottomOptionsTextStyle"
            android:drawableTop="@drawable/category_folder_dark"
            android:text="@string/group" />

        <TextView
            android:id="@+id/frag_shelf_bottom_options_more_text_view"
            style="@style/ShelfBottomOptionsTextStyle"
            android:drawableTop="@drawable/more_dark"
            android:text="@string/more"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>