<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/new_24dp"
            android:src="@drawable/back_dark" />

        <TextView
            android:id="@+id/dialog_title"
            style="@style/DialogTitleStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/select_backup_location"
            android:textSize="@dimen/new_19sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/backup_location_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/new_1dp"
        android:layout_weight="1"
        android:outlineProvider="bounds"
        android:paddingHorizontal="@dimen/new_24dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_category_recycler_view" />

    <Button
        android:id="@+id/backup_location_backup_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/new_46dp"
        android:layout_marginStart="@dimen/new_28dp"
        android:layout_marginTop="@dimen/new_20dp"
        android:layout_marginEnd="@dimen/new_28dp"
        android:layout_marginBottom="@dimen/new_22dp"
        android:background="@drawable/button_blue_bg_selector"
        android:backgroundTint="@color/ns_blue"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/backup_to_"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/new_16sp"
        android:textStyle="normal" />

</LinearLayout>