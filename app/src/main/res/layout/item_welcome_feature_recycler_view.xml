<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="@dimen/_33dp"
    app:contentPaddingBottom="@dimen/_18dp"
    app:contentPaddingLeft="@dimen/_32dp"
    app:contentPaddingRight="@dimen/_46dp"
    app:contentPaddingTop="@dimen/_18dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feature_image"
            android:layout_width="@dimen/margin_twenty_eight"
            android:layout_height="@dimen/margin_twenty_eight"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_notes" />

        <TextView
            android:id="@+id/feature_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_22dp"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="@dimen/_2sp"
            android:maxLines="1"
            android:text="@string/take_notes"
            android:textColor="#000000"
            android:textSize="@dimen/welcome_feature_text_size" />
    </LinearLayout>

</androidx.cardview.widget.CardView>