<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layMain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/_350dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:orientation="vertical"
        android:padding="@dimen/margin_thirty">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:drawableLeft="@mipmap/store_nsclub"
            android:drawablePadding="@dimen/_12dp"
            android:lineSpacingExtra="-3.6sp"
            android:text="@string/noteshelf_club"
            android:textColor="#000000"
            android:textSize="@dimen/store_pack_header_title_text_size"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:alpha=".1"
            android:background="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/signed_in_as"
            android:textColor="#000000"
            android:textSize="@dimen/textsize_fifteen" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="#000000"
            android:textSize="@dimen/textsize_fifteen"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLogout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46dp"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/round_corners_signout_bg"
            android:gravity="center"
            android:text="@string/logout"
            android:textColor="#CC4278"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>