<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/new_100dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/new_16dp"
        android:paddingTop="@dimen/new_12dp"
        android:paddingEnd="@dimen/new_16dp"
        android:paddingBottom="@dimen/new_12dp">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/indexing_page_spinner"
            android:layout_width="@dimen/margin_twenty_five"
            android:layout_height="@dimen/margin_twenty_five"
            app:indicatorColor="#f97641"
            app:indicatorName="BallSpinFadeLoaderIndicator" />

        <TextView
            android:id="@+id/indexing_page_value_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/new_15dp"
            android:fontFamily="@font/roboto"
            android:text="@string/indexing_page_num"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/new_14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>