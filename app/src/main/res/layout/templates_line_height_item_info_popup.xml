<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/new_56dp"
    android:layout_centerVertical="true">

    <RelativeLayout
        android:id="@+id/lineheightLytID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/new_56dp">

            <View
                android:id="@+id/templateClrIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/selectioncolorview"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/lineheightTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/templateClrIV"
                android:text="@string/template_title"
                android:textSize="@dimen/new_16sp"
                android:textColor="#000000"
                android:letterSpacing="0.01"
                android:layout_marginLeft="@dimen/new_16dp"
                android:lineHeight="24sp"
                android:lineSpacingExtra="5sp"
                android:translationY="-2.62sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/ivListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#14212121"
            android:layout_toRightOf="@+id/templateClrIV"
            android:layout_marginLeft="@dimen/new_16dp"
            android:layout_alignParentBottom="true"/>
        </RelativeLayout>


</RelativeLayout>