<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/tempItemLyt"
    android:gravity="center|center_vertical"
    android:layout_marginRight="@dimen/new_16dp">

    <RelativeLayout
        app:layout_constraintBottom_toTopOf="@+id/templateNameTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/new_8dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:id="@+id/relLayoutID">

        <RelativeLayout
            android:id="@+id/progressbarFrmLyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@drawable/progressbarbg">

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="@dimen/new_32dp"
                android:layout_height="@dimen/new_32dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                style="?android:attr/progress"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/template_itemIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/notebook"/>

        <ImageButton
            android:id="@+id/item_choose_cover_paper_delete_image_view"
            android:layout_width="@dimen/new_24dp"
            android:layout_height="@dimen/new_24dp"
            android:layout_alignTop="@id/template_itemIV"
            android:layout_alignEnd="@id/template_itemIV"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/delete_circle"
            android:visibility="visible"/>

    </RelativeLayout>

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/templateNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLayoutID"
        android:gravity="center"
        android:layout_marginTop="@dimen/new_8dp"
        android:layout_marginBottom="@dimen/new_8dp"
        android:layout_centerInParent="true"
        android:text="@string/line_height"
        android:textSize="@dimen/new_14sp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"
        android:fontFamily="@font/roboto"
        android:lineHeight="20sp"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="4sp"
        android:translationY="-1.8sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
