<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layMain"
        android:layout_width="@dimen/dimen_520"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners_dialog_bg"
        android:orientation="vertical"
        android:paddingStart="@dimen/_24dp"
        android:paddingEnd="@dimen/_24dp"
        android:paddingBottom="@dimen/_20dp">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_64"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgAddDialogClose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_24dp"
                android:scaleType="center"
                android:src="@mipmap/cover_back_dark" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="0.01"
                android:text="@string/customize_cover"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_20" />
        </LinearLayout>

        <View
            android:id="@+id/dotView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2dp"
            android:layout_marginBottom="@dimen/margin_seventeen"
            android:alpha="0.2"
            android:background="@drawable/store_dot_gray"
            android:layerType="software"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <TextView
            android:id="@+id/txtTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_thirty"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal"
            android:text="@string/pinch_and_zoom_to_layout_your_cover"
            android:textColor="#383838"
            android:textSize="@dimen/textsize_fifteen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dotView" />

        <RelativeLayout
            android:id="@+id/layImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTip">

            <com.fluidtouch.noteshelf.store.view.FTResizeImageView
                android:id="@+id/imaTheme"
                android:layout_width="@dimen/new_note_book_dialog_paper_width"
                android:layout_height="@dimen/dimen_170"
                app:cropviewViewportRatio="0.8" />

            <ImageView
                android:id="@+id/imgMask"
                android:layout_width="@dimen/new_note_book_dialog_paper_width"
                android:layout_height="@dimen/dimen_170"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imgMask2"
                android:layout_width="@dimen/new_note_book_dialog_paper_width"
                android:layout_height="@dimen/_60dp"
                android:layout_marginTop="@dimen/margin_forty"
                android:alpha="0.3"
                android:background="#000000"
                android:visibility="visible" />

            <com.fluidtouch.noteshelf.store.view.BlurringView
                android:id="@+id/imgMask3"
                android:layout_width="@dimen/new_note_book_dialog_paper_width"
                android:layout_height="@dimen/_60dp"
                android:layout_marginTop="@dimen/margin_forty"
                android:visibility="gone"
                app:blurRadius="11"
                app:downsampleFactor="6"
                app:overlayColor="#99FFFFFF" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layImage">

            <View
                android:id="@+id/color1"
                android:layout_width="@dimen/_44dp"
                android:layout_height="@dimen/margin_thirty"
                android:layout_marginRight="@dimen/margin_eight"
                android:background="@drawable/customcolor1" />

            <View
                android:id="@+id/color2"
                android:layout_width="@dimen/_44dp"
                android:layout_height="@dimen/margin_thirty"
                android:layout_marginRight="@dimen/margin_eight"
                android:background="@drawable/customcolor2" />

            <View
                android:id="@+id/color3"
                android:layout_width="@dimen/_44dp"
                android:layout_height="@dimen/margin_thirty"
                android:layout_marginRight="@dimen/margin_eight"
                android:background="@drawable/customcolor3" />

            <View
                android:id="@+id/color4"
                android:layout_width="@dimen/_44dp"
                android:layout_height="@dimen/margin_thirty"
                android:layout_marginRight="@dimen/margin_eight"
                android:background="@drawable/customcolor4" />

            <View
                android:id="@+id/color5"
                android:layout_width="@dimen/_44dp"
                android:layout_height="@dimen/margin_thirty"
                android:background="@drawable/customcolor5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/laySave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22dp"
            android:background="@drawable/save_for_future_bg"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layColors">

            <CheckBox
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_4dp"
                android:button="@drawable/checked_selection"
                android:checked="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/_20dp"
                android:paddingRight="@dimen/_20dp"
                android:text="@string/save_for_future_use"
                android:textColor="#383838"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtThemeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70dp"
            android:hint="@string/enter_name"
            android:inputType="text"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/laySave" />

        <TextView
            android:id="@+id/btnCreateTheme"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_36dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20dp"
            android:background="#0298dc"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="@dimen/_2sp"
            android:paddingStart="@dimen/margin_twenty_five"
            android:paddingEnd="@dimen/margin_twenty_five"
            android:text="@string/use_this_cover"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtThemeName" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>