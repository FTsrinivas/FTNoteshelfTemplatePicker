<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_22dp"
    app:cardElevation="@dimen/_4dp">

    <LinearLayout
        android:id="@+id/zoom_lock_root_layout"
        android:layout_width="@dimen/_114dp"
        android:layout_height="@dimen/_44dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lock_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingEnd="@dimen/_8dp"
            android:src="@drawable/lock_off" />

        <TextView
            android:id="@+id/zoom_percent_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:background="#ffffff"
            android:fontFamily="@font/roboto"
            android:lineSpacingExtra="3sp"
            android:singleLine="true"
            android:text="100%"
            android:textColor="#000000"
            android:textSize="@dimen/_13sp" />

        <!--<Spinner
            android:id="@+id/zoom_percent_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dropDownWidth="match_parent"
            android:fontFamily="@font/roboto"
            android:spinnerMode="dropdown"
            tools:listitem="@layout/item_zoom_percent_spinner_layout" />-->
    </LinearLayout>

</androidx.cardview.widget.CardView>