<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/store_pack_width"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_thirty"
    android:paddingTop="@dimen/_16dp">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_14dp"
        android:fontFamily="sans-serif"
        android:text="@string/default_cover"
        android:textColor="#383838"
        android:textSize="@dimen/store_pack_small_text_title_size"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/imgBanner"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_14dp"
        android:alpha="0.7"
        android:fontFamily="sans-serif"
        android:text="Basic Orange"
        android:textColor="#383838"
        android:textSize="@dimen/store_pack_small_text_sub_title_size"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/imgBanner"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgBanner">

        <TextView
            android:id="@+id/txtGet"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:background="@drawable/store_get_bg"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/get"
            android:textColor="#ffffff"
            android:textSize="@dimen/store_pack_small_text_sub_title_size"
            android:textStyle="normal" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/progress_circular"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="@dimen/store_pack_medium_image_length"
        android:layout_height="@dimen/store_pack_medium_image_length"
        android:scaleType="fitXY"
        android:src="@mipmap/app_icon_splash" />

</androidx.constraintlayout.widget.ConstraintLayout>