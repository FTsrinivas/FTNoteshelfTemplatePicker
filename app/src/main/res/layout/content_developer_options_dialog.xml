<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        style="@style/DialogTitleStyle"
        android:layout_marginStart="@dimen/new_28dp"
        android:layout_marginEnd="@dimen/new_28dp"
        android:layout_marginBottom="@dimen/new_15dp"
        android:text="Developer Options" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/new_28dp"
            android:layout_marginEnd="@dimen/new_28dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/prediction_switch_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/PopupItemTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disable handwriting prediction" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/prediction_switch"
                    style="@style/PopupItemTextStyle"
                    android:layout_width="wrap_content"
                    android:theme="@style/Switch" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>