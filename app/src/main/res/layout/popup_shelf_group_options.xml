<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PopupStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="@dimen/new_320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popup_shelf_notebook_open_text_view"
                style="@style/PopupItemTextStyle"
                android:paddingHorizontal="@dimen/new_24dp"
                android:text="@string/open" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10dp"
                android:alpha="0.1"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/popup_shelf_notebook_rename_text_view"
                style="@style/PopupItemTextStyle"
                android:paddingHorizontal="@dimen/new_24dp"
                android:text="@string/rename" />
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>