<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookmark_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bookmark_item_check_badge"
            android:layout_width="@dimen/new_22dp"
            android:layout_height="@dimen/new_22dp"
            android:layout_marginEnd="@dimen/new_10dp"
            android:src="@drawable/check_badge" />

        <ImageView
            android:id="@+id/bookmark_icon"
            android:layout_width="@dimen/new_30dp"
            android:layout_height="@dimen/new_30dp"
            android:src="@drawable/bookmark_blue" />

        <TextView
            android:id="@+id/bookmark_title_text_view"
            style="@style/PopupItemTextStyle"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/new_10dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="@string/untitled" />

        <TextView
            android:id="@+id/bookmarked_page_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:fontFamily="@font/roboto"
            android:text="1"
            android:textSize="@dimen/new_14sp" />

    </LinearLayout>

    <include layout="@layout/divider_black" />

</LinearLayout>