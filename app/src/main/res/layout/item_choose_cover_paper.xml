<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_choose_paper_cover_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_choose_cover_paper_sub_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/new_10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_choose_cover_paper_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/new_4dp"
            app:cardElevation="@dimen/new_1dp">

            <ImageView
                android:id="@+id/item_choose_cover_paper_image_view"
                android:layout_width="@dimen/new_137dp"
                android:layout_height="@dimen/new_170dp"
                android:outlineProvider="background"
                android:scaleType="fitXY"
                android:src="@drawable/notebook" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_choose_cover_paper_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_choose_cover_paper_card_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/new_12dp"
            android:fontFamily="@font/roboto"
            android:text="Template Name"
            android:textColor="@color/ns_text"
            android:textSize="@dimen/new_14sp" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/item_choose_cover_paper_delete_image_view"
        android:layout_width="@dimen/new_24dp"
        android:layout_height="@dimen/new_24dp"
        android:layout_alignTop="@id/item_choose_cover_paper_sub_layout"
        android:layout_alignEnd="@id/item_choose_cover_paper_sub_layout"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/delete_circle" />

</RelativeLayout>