<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/margin_one_sixty"
    android:layout_height="@dimen/margin_ninety_four"
    android:background="@drawable/round_corners_dialog_bg"
    android:paddingTop="@dimen/margin_five"
    android:paddingBottom="@dimen/margin_five">

    <TextView
        android:id="@+id/sorting_options_by_name_text_view"
        style="@style/SortingOptionsTextStyle"
        android:text="@string/name"
        app:layout_constraintBottom_toTopOf="@+id/sorting_options_by_date_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sorting_options_by_date_text_view"
        style="@style/SortingOptionsTextStyle"
        android:text="@string/date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sorting_options_by_name_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>