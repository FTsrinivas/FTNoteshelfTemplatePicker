<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/toolbar_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/doc_toolbar_left_options_layout"
        style="@style/WrapWrap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/doc_toolbar_tools_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/doc_toolbar_back_image_view"
            style="@style/ToolbarImageStyle"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/doc_toolbar_add_white_image_view"
            style="@style/ToolbarImageStyle"
            android:src="@drawable/add"
            app:layout_constraintBottom_toBottomOf="@id/doc_toolbar_back_image_view"
            app:layout_constraintLeft_toRightOf="@id/doc_toolbar_back_image_view"
            app:layout_constraintTop_toTopOf="@id/doc_toolbar_back_image_view" />

        <ImageView
            android:id="@+id/doc_toolbar_undo_image_view"
            style="@style/ToolbarImageStyle"
            app:layout_constraintBottom_toBottomOf="@id/doc_toolbar_back_image_view"
            app:layout_constraintLeft_toRightOf="@id/doc_toolbar_add_white_image_view"
            app:layout_constraintTop_toTopOf="@id/doc_toolbar_back_image_view"
            app:srcCompat="@drawable/undo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/doc_toolbar_tools_layout"
        style="@style/ToolbarImageStyle2"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/doc_toolbar_right_options_layout"
        app:layout_constraintStart_toEndOf="@+id/doc_toolbar_left_options_layout"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/doc_toolbar_pen_on_image_view"
            style="@style/WrapMatch"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/doc_toolbar_highlighter_layout"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/document_custom_toolbar_pen_on_image_view_layout"
                style="@style/ToolbarImageStyle"
                android:gravity="center">

                <ImageView
                    android:id="@+id/doc_toolbar_pen_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pen" />

                <ImageView
                    android:id="@+id/doc_toolbar_pen_on_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/navcolorpen"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/doc_toolbar_bluetooth_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/document_custom_toolbar_pen_on_image_view_layout"
                android:layout_marginTop="@dimen/document_toolbar_bluetooth_icon_margin_top"
                android:layout_marginEnd="@dimen/document_toolbar_bluetooth_icon_margin_end"
                android:background="@mipmap/naviconbluetooth"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/doc_toolbar_highlighter_layout"
            style="@style/ToolbarImageStyle"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/doc_toolbar_pen_on_image_view"
            app:layout_constraintTop_toTopOf="@id/doc_toolbar_pen_on_image_view">

            <ImageView
                android:id="@+id/doc_toolbar_highlighter_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/highlighter" />

            <ImageView
                android:id="@+id/doc_toolbar_highlighter_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/navcolorhighlighter"
                android:visibility="gone" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/doc_toolbar_eraser_image_view"
            style="@style/ToolbarImageStyle"
            android:src="@drawable/eraser"
            app:layout_constraintLeft_toRightOf="@id/doc_toolbar_highlighter_layout"
            app:layout_constraintTop_toTopOf="@id/doc_toolbar_pen_on_image_view" />


        <ImageView
            android:id="@+id/doc_toolbar_text_image_view"
            style="@style/ToolbarImageStyle"
            android:src="@drawable/text"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@id/doc_toolbar_eraser_image_view"
            app:layout_constraintTop_toTopOf="@id/doc_toolbar_pen_on_image_view" />

        <ImageView
            android:id="@+id/doc_toolbar_lasso_image_view"
            style="@style/ToolbarImageStyle"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@id/doc_toolbar_text_image_view"
            app:layout_constraintTop_toTopOf="@id/doc_toolbar_pen_on_image_view"
            app:srcCompat="@drawable/cut" />

        <ImageView
            android:id="@+id/doc_toolbar_pdfview_image_view"
            style="@style/ToolbarImageStyle"
            android:src="@drawable/pdfview"
            app:layout_constraintLeft_toRightOf="@id/doc_toolbar_lasso_image_view"
            app:layout_constraintTop_toTopOf="@id/doc_toolbar_pen_on_image_view" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/doc_toolbar_right_options_layout"
        style="@style/WrapWrap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/doc_toolbar_shape_image_view"
            style="@style/ToolbarImageStyle"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/doc_toolbar_share_image_view"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/shape" />

        <ImageView
            android:id="@+id/doc_toolbar_share_image_view"
            style="@style/ToolbarImageStyle"
            app:layout_constraintBottom_toBottomOf="@id/doc_toolbar_shape_image_view"
            app:layout_constraintRight_toLeftOf="@id/doc_toolbar_finder_image_view"
            app:layout_constraintTop_toTopOf="@id/doc_toolbar_shape_image_view"
            app:srcCompat="@drawable/share" />

        <ImageView
            android:id="@+id/doc_toolbar_finder_image_view"
            style="@style/ToolbarImageStyle"
            app:layout_constraintBottom_toBottomOf="@id/doc_toolbar_shape_image_view"
            app:layout_constraintRight_toLeftOf="@id/doc_toolbar_settings_image_view"
            app:layout_constraintTop_toTopOf="@id/doc_toolbar_shape_image_view"
            app:srcCompat="@drawable/finder" />

        <ImageView
            android:id="@+id/doc_toolbar_settings_image_view"
            style="@style/ToolbarImageStyle"
            app:layout_constraintBottom_toBottomOf="@id/doc_toolbar_shape_image_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/doc_toolbar_shape_image_view"
            app:srcCompat="@drawable/options" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>