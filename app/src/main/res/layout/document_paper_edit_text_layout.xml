<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/document_paper_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/document_paper_edit_text_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/document_paper_edit_layout_bg"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/document_paper_edit_text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/document_paper_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/roboto"
                android:gravity="top|left"
                android:inputType="textMultiLine|textCapSentences"
                android:isScrollContainer="false"
                android:scrollbars="none"
                android:scrollHorizontally="false"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/textsize_twelve">

                <requestFocus />
            </androidx.appcompat.widget.AppCompatEditText>
        </RelativeLayout>

        <ImageView
            android:id="@+id/document_paper_expand_image_view"
            android:layout_width="@dimen/margin_thirty"
            android:layout_height="@dimen/margin_thirty"
            android:layout_margin="@dimen/_3dp"
            android:paddingStart="@dimen/_10dp"
            android:paddingTop="@dimen/_10dp"
            android:src="@drawable/triangleresize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>