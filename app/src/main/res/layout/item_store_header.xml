<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/margin_thirty"
    android:paddingRight="@dimen/margin_twenty_five">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/store_nsclub"
        android:drawablePadding="@dimen/_12dp"
        android:lineSpacingExtra="-3.6sp"
        android:text="@string/noteshelf_club"
        android:textColor="#000000"
        android:textSize="@dimen/store_pack_header_title_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSignUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:gravity="end"
        android:padding="@dimen/margin_five"
        android:text=""
        android:visibility="gone"
        android:textColor="#000000"
        android:textSize="@dimen/store_pack_header_title_sub_text_size"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="@dimen/_44dp"
        android:layout_height="@dimen/_44dp"
        android:fontFamily="sans-serif"
        android:gravity="end"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent" />
</LinearLayout>