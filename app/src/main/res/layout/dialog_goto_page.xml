<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/ns_dialog_bg"
    app:cardCornerRadius="@dimen/new_16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="@dimen/new_272dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/DialogTitleStyle"
            android:layout_marginTop="@dimen/new_20dp"
            android:gravity="center"
            android:text="@string/go_to_page"
            android:textSize="@dimen/new_17sp" />

        <EditText
            android:id="@+id/page_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/new_16dp"
            android:background="@drawable/gray_border_white_fill"
            android:hint="Enter between 1 and 6"
            android:imeOptions="actionGo"
            android:inputType="number"
            android:maxLines="1"
            android:padding="@dimen/new_8dp"
            android:textSize="@dimen/new_16sp" />

        <include layout="@layout/divider_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto"
                android:text="@string/cancel"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/ns_blue"
                android:textSize="@dimen/new_16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:alpha="0.2"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/button_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto"
                android:text="@string/ok"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/ns_blue"
                android:textSize="@dimen/new_16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>