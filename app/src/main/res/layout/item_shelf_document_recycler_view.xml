<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F7F6"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_shelf_document_note_bg_image_view"
            android:layout_width="@dimen/new_258dp"
            android:layout_height="@dimen/new_262dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/new_20dp"
            android:alpha="0.05"
            android:background="@drawable/note_bg"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/new_30dp"
            android:paddingBottom="@dimen/new_30dp">

            <RelativeLayout
                android:id="@+id/item_shelf_document_note_relative_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="@dimen/new_194dp"
                    android:layout_height="@dimen/new_205dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/new_16dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-2dp"
                        android:layout_marginTop="@dimen/new_3dp"
                        android:layout_marginEnd="-2dp"
                        android:layout_marginBottom="@dimen/new_3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/covershadow" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/new_5dp"
                        android:padding="@dimen/new_7dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/notebook"
                        android:visibility="visible" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/new_186dp"
                    android:layout_height="@dimen/new_213dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/new_8dp"
                    android:layout_marginTop="@dimen/new_8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/new_3dp"
                        android:layout_marginBottom="@dimen/new_3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/covershadow" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/new_5dp"
                        android:padding="@dimen/new_7dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/notebook" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item_shelf_document_image_layout"
                    android:layout_width="@dimen/new_178dp"
                    android:layout_height="@dimen/new_221dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/new_16dp"
                    android:layout_marginRight="@dimen/new_16dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/new_3dp"
                        android:layout_marginBottom="@dimen/new_3dp"
                        android:src="@drawable/covershadow" />

                    <ImageView
                        android:id="@+id/item_shelf_document_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/new_2dp"
                        android:layout_marginTop="@dimen/new_2dp"
                        android:layout_marginEnd="@dimen/new_2dp"
                        android:layout_marginBottom="@dimen/new_7dp"
                        android:padding="@dimen/new_5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/notebook"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/item_shelf_document_selection_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/item_shelf_document_image_view"
                        android:layout_alignTop="@id/item_shelf_document_image_view"
                        android:layout_marginStart="@dimen/new_13dp"
                        android:layout_marginTop="@dimen/new_13dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/circle_unselected"
                        android:visibility="visible" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/note_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/item_shelf_document_image_layout"
                    android:layout_alignTop="@id/item_shelf_document_image_layout"
                    android:layout_alignEnd="@id/item_shelf_document_image_layout"
                    android:layout_alignBottom="@id/item_shelf_document_image_layout"
                    android:layout_marginLeft="@dimen/new_5dp"
                    android:layout_marginRight="@dimen/new_5dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40" />

                    <TextView
                        android:id="@+id/item_shelf_document_title_text_view"
                        style="@style/ShelfItemTitleStyle"
                        android:layout_weight="60" />

                    <View
                        android:id="@+id/shelf_item_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_1dp">

                <TextView
                    android:id="@+id/item_shelf_document_rename_text_view"
                    style="@style/ShelfItemRenameStyle"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/item_shelf_document_date_text_view"
                    style="@style/ShelfItemDateStyle"
                    android:layout_alignTop="@id/item_shelf_document_rename_text_view"
                    android:layout_alignBottom="@id/item_shelf_document_rename_text_view"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/ShelfItemDividerStyle"
        android:visibility="gone" />
</LinearLayout>