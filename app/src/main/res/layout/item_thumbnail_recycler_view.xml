<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thumbnail_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginBottom="@dimen/new_21dp"
    android:background="@android:color/transparent"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/thumbnail_select_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/thumbnail_select_bg"
        android:padding="@dimen/new_5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/thumbnail_bg">

            <androidx.cardview.widget.CardView
                android:id="@+id/thumbnail_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="4.4dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/thumbnail_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxWidth="@dimen/thumbnail_item_max_height"
                        android:maxHeight="@dimen/thumbnail_item_max_height"
                        android:minWidth="@dimen/thumbnail_item_min_width"
                        android:minHeight="@dimen/thumbnail_item_min_height"
                        android:src="@drawable/thumbnail_original" />

                    <com.fluidtouch.noteshelf.document.search.FTTextHighlightView
                        android:id="@+id/thumbnail_highlight_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/thumbnail_image_view"
                        android:layout_alignTop="@id/thumbnail_image_view"
                        android:layout_alignEnd="@id/thumbnail_image_view"
                        android:layout_alignBottom="@id/thumbnail_image_view"
                        android:background="@android:color/transparent" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/thumbnail_bookmark_button"
                android:layout_width="@dimen/new_30dp"
                android:layout_height="@dimen/new_30dp"
                android:layout_alignTop="@id/thumbnail_card_view"
                android:layout_alignEnd="@id/thumbnail_card_view"
                android:layout_marginTop="-5dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/bookmark_off" />

            <TextView
                android:id="@+id/thumbnail_page_number_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/thumbnail_card_view"
                android:fontFamily="@font/roboto"
                android:padding="@dimen/_7dp"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/new_12sp" />

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>